generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
  output     = "../lib/generated/prisma"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  name          String
  theme         String?
  thumbnail     String?
  deviceType    String   @default("mobile") // "mobile", "web", "inspirations", or "wireframe"
  wireframeKind String?  // When deviceType is "wireframe": "web" (responsive, 1 screen) or "mobile" (1 mobile screen). Default "web".
  width         Int?     // Custom width for inspirations / variable-size designs
  height        Int?     // Custom height for inspirations / variable-size designs
  initialPrompt String?  // User's original prompt, shown in design sidebar
  frames        Frame[]
  chatMessages  ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Frame {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  htmlContent String
  designTree  Json?    // Structured design data (Design Tree)

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId String   @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id])
  frameId   String?  @db.ObjectId // Optional: if editing a specific frame
  message   String
  role      String   @default("user") // "user" or "assistant"
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([frameId])
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @unique
  credits       Float    @default(25.0)
  totalCreditsUsed Float @default(0.0)
  name          String?
  email         String?
  profilePicture String?
  headerImage   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}